<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="352dp"
        android:background="@drawable/rounded_corners_background"> <!-- Декоративный фон с закругленными углами -->

        <ImageView
            android:id="@+id/RV_image"
            android:layout_width="305dp"
            android:layout_marginHorizontal="10dp"
            android:layout_height="210dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"
            android:background="@drawable/image_border"
            android:scaleType="centerCrop" /><!-- Рамка для изображения -->

        <TextView
            android:id="@+id/title_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/RV_image"
            android:layout_marginStart="10dp"
            android:background="@drawable/text_background"
            android:text="Title"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" /> <!-- Декоративный фон для текста -->

        <TextView
            android:id="@+id/price_rv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="120dp"
            android:background="@drawable/text_background"
            android:text="Price"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" /> <!-- Декоративный фон для текста -->
    </RelativeLayout>

</LinearLayout>
